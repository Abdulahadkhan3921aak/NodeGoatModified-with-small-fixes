# Security Configuration
# --------------------------
# API Security
JWT_SECRET=your_strong_jwt_secret_key_here
API_KEY=your_api_key_here
ALLOWED_ORIGINS=http://localhost:4000,https://yourapp.com,https://www.yourapp.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds

# Intrusion Detection
MAX_LOGIN_ATTEMPTS=5
BLOCK_TIME_MS=3600000  # 1 hour in milliseconds

# Server Configuration
NODE_ENV=production
FORCE_HTTPS=true
HTTP_PORT=8080
PORT=4000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/nodegoat

# Logging Configuration
LOG_LEVEL=info
